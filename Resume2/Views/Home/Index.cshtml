@model Resume2.Models.Resume

@{
    ViewData["Title"] = "My Resume";
}

<body>
    <dl class="dl-horizontal"></dl>

    <div class="row">
        <div class="col-sm-2"><img src="~/images/David.jpg" alt="Professional Picture" width="90" height="128"></div>

        <div class="col-sm-2">
            <b>@Html.DisplayFor(model => model.FirstLast)</b>
            @Html.DisplayFor(model => model.City)  @Html.DisplayFor(model => model.State)
            @Html.DisplayFor(model => model.Email)
            @Html.DisplayFor(model => model.Phone)
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-8">
            @Html.DisplayFor(model => model.Summary)
        </div>

        <dl class="dl-horizontal"></dl>
    </div>

    <dl class="dl-horizontal"></dl>
    <dl class="dl-horizontal"></dl>
    <h4>Experience</h4>
    <div class="container">
        <div class="list-group">
            @foreach (var experience in Model.Experiences.OrderByDescending(y => y.StartDate))
            {
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">
                        @Html.DisplayFor(model => experience.JobTitle) ,
                        @Html.DisplayFor(model => experience.Company) ( @Html.DisplayFor(model => experience.StartDate) to
                        @Html.DisplayFor(model => experience.EndDate) )
                    </h4>

                    <p class="list-group-item-text"><I><b>@Html.DisplayFor(model => experience.CompanyDesc)</b></I></p>

                    <ul class="a">
                        @foreach (var dutys in experience.Dutys.OrderBy(y => y.Priority))
                        {
                            <li><p class="list-group-item-text">@Html.DisplayFor(model => dutys.Description)</p></li>
                        }
                        <p class="list-group-item-text"> .</p>
                    </ul>
                </a>

            }
        </div>

    </div>


    <h4>Education</h4>
    <div class="container">
        <div class="list-group">

            @foreach (var education in Model.Educations.OrderBy(y => y.StartDate))
            {
                <a href="#" class="list-group-item">
                    <h4 class="list-group-item-heading">
                        @Html.DisplayFor(model => education.Institution) ,
                        @Html.DisplayFor(model => education.City), @Html.DisplayFor(model => education.State)
                    </h4>
                    <ul class="a">
                        @Html.DisplayFor(model => education.Degree)
                        @Html.DisplayFor(model => education.StartDate) to @Html.DisplayFor(model => education.EndDate)
                    </ul>
                </a>
            }
        </div>

    </div>

    <h4>References</h4>

    <div class="container">
        <div class="list-group">
            @foreach (var reference in Model.References.OrderBy(y => y.FirstLast))
            {<a href="#" class="list-group-item">
                    <ul class="a">
                        @Html.DisplayFor(model => reference.FirstLast) , @Html.DisplayFor(model => reference.Position) , @Html.DisplayFor(model => reference.Company)
                    </ul>
                </a>

            }
        </div>

    </div>
</body>
