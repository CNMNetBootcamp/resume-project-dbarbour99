@model Resume2.Models.Reference

@{
  ViewData["Title"] = "Edit";
  ViewData["resumeID"] = Model.ResumeID;
}

<h2>Edit</h2>

<h4>Reference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReferenceID" />
            <input type="hidden" asp-for="ResumeID" asp-items="@ViewData["resumeID"]" />
